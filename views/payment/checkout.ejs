<div class="row">
  <div class="col-md-8 mx-auto">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Payment</h5>
      </div>
      <div class="card-body">
        <div class="row mb-4">
          <div class="col-md-6">
            <h6>Booking Details</h6>
            <p><strong>Booking ID:</strong> <%= booking._id %></p>
            <p><strong>Date:</strong> <%= new Date(booking.createdAt).toLocaleString() %></p>
            <p><strong>Problem Category:</strong> <%= booking.problemCategory %></p>
          </div>
          <div class="col-md-6">
            <h6>Service Details</h6>
            <p><strong>Mechanic:</strong> <%= booking.mechanic.name %></p>
            <p><strong>Service Notes:</strong> <%= booking.notes || 'No notes provided' %></p>
            <p><strong>Amount:</strong> 
              <span class="text-primary fw-bold">$<%= booking.payment.amount.toFixed(2) %></span>
            </p>
          </div>
        </div>

        <div class="alert alert-info">
          <i class="fas fa-info-circle"></i> Please enter your card details below to complete the payment.
        </div>

        <form id="payment-form" data-booking-id="<%= booking._id %>">
          <div class="mb-3">
            <label for="card-element" class="form-label">Credit or Debit Card</label>
            <div id="card-element" class="form-control" style="height: 40px; padding-top: 10px;"></div>
            <div id="card-errors" class="text-danger mt-2" role="alert"></div>
          </div>

          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary" id="submit-button">
              <i class="fas fa-credit-card me-2"></i> Pay $<%= booking.payment.amount.toFixed(2) %>
            </button>
            <a href="/user/booking/<%= booking._id %>" class="btn btn-outline-secondary">
              <i class="fas fa-arrow-left me-2"></i> Back to Booking
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="https://js.stripe.com/v3/"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const stripe = Stripe('<%= stripePublishableKey %>');
    const elements = stripe.elements();

    const card = elements.create('card', {
      style: {
        base: {
          color: '#32325d',
          fontFamily: '"Helvetica Neue", Helvetica, sans-serif',
          fontSmoothing: 'antialiased',
          fontSize: '16px',
          '::placeholder': {
            color: '#aab7c4'
          }
        },
        invalid: {
          color: '#fa755a',
          iconColor: '#fa755a'
        }
      }
    , hidePostalCode: true
    });

    card.mount('#card-element');

    let cardComplete = false;
    card.addEventListener('change', function(event) {
      const displayError = document.getElementById('card-errors');
      displayError.textContent = event.error ? event.error.message : '';
      // Track completeness and enable submit only when card input is complete
      cardComplete = !!event.complete;
      const submitBtn = document.getElementById('submit-button');
      if (submitBtn) submitBtn.disabled = !cardComplete;
    });

    const form = document.getElementById('payment-form');
    const bookingId = form.dataset.bookingId;
  const amount = Number('<%= booking.payment.amount.toFixed(2) %>');

    // Start with submit disabled until card is complete
    const initialSubmit = document.getElementById('submit-button');
    if (initialSubmit) initialSubmit.disabled = true;

    form.addEventListener('submit', async function(event) {
      event.preventDefault();

      const submitButton = document.getElementById('submit-button');
      submitButton.disabled = true;
      submitButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Processing...';

      try {
        // Prevent attempting to create a PaymentMethod if the card input is not complete
        if (!cardComplete) {
          document.getElementById('card-errors').textContent = 'Please complete the card details before submitting.';
          submitButton.disabled = false;
          submitButton.innerHTML = `<i class="fas fa-credit-card me-2"></i> Pay $${amount.toFixed(2)}`;
          return;
        }

        const { paymentMethod, error } = await stripe.createPaymentMethod({
          type: 'card',
          card: card
        });

        if (error) {
          document.getElementById('card-errors').textContent = error.message;
          submitButton.disabled = false;
          submitButton.innerHTML = `<i class="fas fa-credit-card me-2"></i> Pay $${amount.toFixed(2)}`;
          return;
        }

        const response = await fetch(`/payment/${bookingId}/process`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Accept': 'application/json'
          },
          credentials: 'same-origin',
          body: JSON.stringify({ paymentMethodId: paymentMethod.id })
        });

        if (!response.ok) {
          // try to extract json message, otherwise text
          let msg = 'Network response was not ok';
          try {
            const errBody = await response.json();
            msg = errBody.message || JSON.stringify(errBody);
          } catch (e) {
            msg = await response.text();
          }
          throw new Error(msg || 'Payment failed');
        }

        const result = await response.json();

        if (result.success) {
          const successHtml = `
            <div class="text-center py-5">
              <div class="mb-4">
                <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
              </div>
              <h3 class="mb-3">Payment Successful!</h3>
              <p class="mb-4">Your payment of $${amount.toFixed(2)} has been processed successfully.</p>
              <div class="d-grid gap-2">
                <a href="/user/booking/${bookingId}" class="btn btn-primary">
                  <i class="fas fa-arrow-left me-2"></i> Back to Booking
                </a>
                <a href="/user/dashboard" class="btn btn-outline-secondary">
                  <i class="fas fa-home me-2"></i> Go to Dashboard
                </a>
              </div>
            </div>`;
          document.querySelector('.card-body').innerHTML = successHtml;
        } else {
          throw new Error(result.message || 'Payment failed');
        }
      } catch (err) {
        console.error('Payment error:', err);
        document.getElementById('card-errors').textContent =
          err.message || 'An error occurred during payment. Please try again.';
        submitButton.disabled = false;
        submitButton.innerHTML = `<i class="fas fa-credit-card me-2"></i> Pay $${amount.toFixed(2)}`;
      }
    });
  });
</script>
