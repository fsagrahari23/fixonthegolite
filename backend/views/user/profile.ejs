<div class="container py-4">
  <div class="row">
    <div class="col-md-12 mb-4">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/user/dashboard">Dashboard</a>
          </li>
          <li class="breadcrumb-item active" aria-current="page">My Profile</li>
        </ol>
      </nav>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4 mb-4">
      <div class="card border-0 shadow-sm">
        <div class="card-body text-center p-4">
          <div class="avatar-circle-large bg-primary text-white mx-auto mb-3" id="user-avatar">U</div>
          <h4 class="mb-1" id="user-name">Loading...</h4>
          <p class="text-muted mb-3" id="user-email">Loading...</p>

          <div class="d-flex justify-content-center mb-3">
            <span class="badge bg-primary rounded-pill px-3 py-2">
              <i class="fas fa-user me-1"></i> User
            </span>
          </div>

          <div class="border-top pt-3 mt-3">
            <div class="row text-start">
              <div class="col-6 mb-2">
                <p class="text-muted mb-1 small">Member Since</p>
                <p class="mb-0 fw-bold" id="memberSince">Loading...</p>
              </div>
              <div class="col-6 mb-2">
                <p class="text-muted mb-1 small">Total Bookings</p>
                <p class="mb-0 fw-bold" id="totalBookings">Loading...</p>
                <p class="mb-0 fw-bold" id="memberSince">Loading...</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="card mb-4">
        <div class="card-header bg-white">
          <h5 class="mb-0"><i class="fas fa-crown text-warning me-2"></i>Membership Status</h5>
        </div>
        <div class="card-body" id="membership-status">
          <div class="text-center py-4">
            <p class="text-muted">Loading membership status...</p>
          </div>
        </div>
      </div>

      <div class="card border-0 shadow-sm mt-4">
        <div class="card-header bg-white">
          <h5 class="mb-0">
            <i class="fas fa-map-marker-alt text-primary me-2"></i>Your Location
          </h5>
        </div>
        <div class="card-body p-0">
          <div id="user-map" style="height: 250px"></div>
        </div>
      </div>
    </div>

    <div class="col-lg-8">
      <div class="card border-0 shadow-sm">
        <div
          class="card-header bg-white d-flex justify-content-between align-items-center"
        >
          <h5 class="mb-0">
            <i class="fas fa-user-edit text-primary me-2"></i>Edit Profile
          </h5>
        </div>
        <div class="card-body p-4">
          <form action="/user/profile" method="POST">
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="name" class="form-label">Full Name</label>
                <div class="input-group">
                  <span class="input-group-text"
                    ><i class="fas fa-user"></i
                  ></span>
                  <input
                    type="text"
                    class="form-control"
                    id="name"
                    name="name"
                    value=""
                    required
                  />
                </div>
              </div>
              <div class="col-md-6">
                <label for="email" class="form-label">Email Address</label>
                <div class="input-group">
                  <span class="input-group-text"
                    ><i class="fas fa-envelope"></i
                  ></span>
                  <input
                    type="email"
                    class="form-control"
                    id="email"
                    value=""
                    disabled
                  />
                </div>
                <div class="form-text">Email cannot be changed</div>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-6">
                <label for="phone" class="form-label">Phone Number</label>
                <div class="input-group">
                  <span class="input-group-text"
                    ><i class="fas fa-phone"></i
                  ></span>
                  <input
                    type="tel"
                    class="form-control"
                    id="phone"
                    name="phone"
                    value=""
                    required
                  />
                </div>
              </div>
              <div class="col-md-6">
                <label for="address" class="form-label">Address</label>
                <div class="input-group">
                  <span class="input-group-text"
                    ><i class="fas fa-map-marker-alt"></i
                  ></span>
                  <input
                    type="text"
                    class="form-control"
                    id="address"
                    name="address"
                    value=""
                    required
                  />
                </div>
              </div>
            </div>

            <div class="mb-4">
              <label class="form-label">Update Location</label>
              <div
                id="update-map"
                style="height: 300px; border-radius: 10px"
              ></div>
              <input
                type="hidden"
                id="latitude"
                name="latitude"
                value=""
              />
              <input
                type="hidden"
                id="longitude"
                name="longitude"
                value=""
              />
            </div>

            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i> Save Changes
              </button>
              <a href="/user/dashboard" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i> Back to Dashboard
              </a>
            </div>
          </form>
        </div>
      </div>

      <div class="card border-0 shadow-sm mt-4">
        <div class="card-header bg-white">
          <h5 class="mb-0">
            <i class="fas fa-lock text-primary me-2"></i>Change Password
          </h5>
        </div>
        <div class="card-body p-4">
          <form action="/user/change-password" method="POST">
            <div class="mb-3">
              <label for="currentPassword" class="form-label"
                >Current Password</label
              >
              <div class="input-group">
                <span class="input-group-text"
                  ><i class="fas fa-lock"></i
                ></span>
                <input
                  type="password"
                  class="form-control"
                  id="currentPassword"
                  name="currentPassword"
                  required
                />
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-6">
                <label for="newPassword" class="form-label">New Password</label>
                <div class="input-group">
                  <span class="input-group-text"
                    ><i class="fas fa-key"></i
                  ></span>
                  <input
                    type="password"
                    class="form-control"
                    id="newPassword"
                    name="newPassword"
                    required
                  />
                </div>
              </div>
              <div class="col-md-6">
                <label for="confirmPassword" class="form-label"
                  >Confirm New Password</label
                >
                <div class="input-group">
                  <span class="input-group-text"
                    ><i class="fas fa-key"></i
                  ></span>
                  <input
                    type="password"
                    class="form-control"
                    id="confirmPassword"
                    name="confirmPassword"
                    required
                  />
                </div>
              </div>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-key me-2"></i> Update Password
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/leaflet.css"
/>
<script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/leaflet.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', async function() {
    try {
      const response = await fetch('/user/api/profile');
      const data = await response.json();

      if (data.error) {
        console.error('Error loading profile data:', data.error);
        return;
      }

      const { user, subscription, subscriptionHistory, isPremium, remainingBookings, premiumFeatures } = data;

      // Profile info
      document.getElementById('user-avatar').textContent = user.name.charAt(0).toUpperCase();
      document.getElementById('user-name').textContent = user.name;
      document.getElementById('user-email').textContent = user.email;
      document.getElementById('memberSince').textContent = new Date(user.createdAt).toLocaleDateString();
      document.getElementById('totalBookings').textContent = user.bookingsCount || 0; // Assuming we add this to API

      // Form fields
      document.getElementById('name').value = user.name;
      document.getElementById('email').value = user.email;
      document.getElementById('phone').value = user.phone;
      document.getElementById('address').value = user.address;
      document.getElementById('latitude').value = user.location?.coordinates?.[1] || '';
      document.getElementById('longitude').value = user.location?.coordinates?.[0] || '';

      // Membership status
      const membershipStatus = document.getElementById('membership-status');
      if (isPremium) {
        membershipStatus.innerHTML = `
          <div class="d-flex align-items-center mb-3">
            <div class="membership-badge bg-success text-white me-3">
              <i class="fas fa-crown"></i>
            </div>
            <div>
              <h5 class="mb-1">Premium Member</h5>
              <p class="text-muted mb-0">
                ${subscription.plan.charAt(0).toUpperCase() + subscription.plan.slice(1)} Plan ¬∑ 
                Expires: ${new Date(subscription.expiresAt).toLocaleDateString()}
              </p>
            </div>
          </div>
          <div class="card mt-3">
            <div class="card-header bg-primary text-white">
              Premium Features
            </div>
            <div class="card-body">
              <ul class="list-group list-group-flush">
                ${premiumFeatures.priorityService ? '<li class="list-group-item"><span class="badge bg-success me-2">‚úî</span>Priority Service Enabled</li>' : ''}
                ${premiumFeatures.tracking ? '<li class="list-group-item"><span class="badge bg-info me-2">üìç</span>Real-time Tracking Enabled</li>' : ''}
                ${premiumFeatures.discounts ? `<li class="list-group-item"><span class="badge bg-warning text-dark me-2">üí∏</span>${premiumFeatures.discounts}% Discount Available</li>` : ''}
                ${premiumFeatures.emergencyAssistance ? '<li class="list-group-item"><span class="badge bg-danger me-2">üö®</span>Emergency Assistance Available</li>' : ''}
                ${premiumFeatures.freeTowing ? `<li class="list-group-item"><span class="badge bg-secondary me-2">üöó</span>Free Towing: ${premiumFeatures.freeTowing} times</li>` : ''}
                ${premiumFeatures.maintenanceChecks ? '<li class="list-group-item"><span class="badge bg-primary me-2">üîß</span>Regular Maintenance Checks Included</li>' : ''}
              </ul>
            </div>
          </div>
          <div class="d-grid gap-2">
            <a href="/user/premium" class="btn btn-outline-primary">
              <i class="fas fa-sync-alt me-2"></i> Change Plan
            </a>
            <form action="/user/premium/cancel" method="POST">
              <button type="submit" class="btn btn-outline-danger w-100" onclick="return confirm('Are you sure you want to cancel your subscription?')">
                <i class="fas fa-times-circle me-2"></i> Cancel Subscription
              </button>
            </form>
          </div>
        `;
      } else {
        membershipStatus.innerHTML = `
          <div class="d-flex align-items-center mb-3">
            <div class="membership-badge bg-secondary text-white me-3">
              <i class="fas fa-user"></i>
            </div>
            <div>
              <h5 class="mb-1">Basic Member</h5>
              <p class="text-muted mb-0">Upgrade to premium for exclusive features</p>
            </div>
          </div>
          <div class="d-grid">
            <a href="/user/premium" class="btn btn-primary">
              <i class="fas fa-crown me-2"></i> Upgrade to Premium
            </a>
          </div>
        `;
      }

      // Initialize current location map
      const userMap = L.map('user-map').setView([
        user.location?.coordinates?.[1] || 20.5937,
        user.location?.coordinates?.[0] || 78.9629
      ], 13);

      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
      }).addTo(userMap);

      if (user.location?.coordinates) {
        L.marker([
          user.location.coordinates[1],
          user.location.coordinates[0]
        ]).addTo(userMap)
          .bindPopup('Your current location')
          .openPopup();
      }

      // Initialize update location map
      const updateMap = L.map('update-map').setView([
        user.location?.coordinates?.[1] || 20.5937,
        user.location?.coordinates?.[0] || 78.9629
      ], 13);

      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
      }).addTo(updateMap);

      // Add draggable marker for updating location
      const marker = L.marker([
        user.location?.coordinates?.[1] || 20.5937,
        user.location?.coordinates?.[0] || 78.9629
      ], { draggable: true }).addTo(updateMap);

      marker.on('dragend', function(e) {
        const position = marker.getLatLng();
        document.getElementById('latitude').value = position.lat;
        document.getElementById('longitude').value = position.lng;

        // Try to get address from coordinates
        fetch(`https://nominatim.openstreetmap.org/reverse?format=json&lat=${position.lat}&lon=${position.lng}`)
          .then(response => response.json())
          .then(data => {
            if (data.display_name) {
              document.getElementById('address').value = data.display_name;
            }
          })
          .catch(error => console.error('Error getting address:', error));
      });

      // Update marker when address changes
      document.getElementById('address').addEventListener('change', function() {
        const address = this.value;

        fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(address)}`)
          .then(response => response.json())
          .then(data => {
            if (data.length > 0) {
              const lat = parseFloat(data[0].lat);
              const lng = parseFloat(data[0].lon);

              document.getElementById('latitude').value = lat;
              document.getElementById('longitude').value = lng;

              updateMap.setView([lat, lng], 15);
              marker.setLatLng([lat, lng]);
            }
          })
          .catch(error => console.error('Error geocoding address:', error));
      });

    } catch (error) {
      console.error('Error fetching profile data:', error);
    }
  });
</script>
